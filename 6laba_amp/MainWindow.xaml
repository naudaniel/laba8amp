<Window x:Class="_6laba_amp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_6laba_amp"
        mc:Ignorable="d"
        Background="{StaticResource background}"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Buttons.xaml" />
                <ResourceDictionary Source="WindowBG.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <Button Content="Night mode" MaxHeight="40" MaxWidth="80" 
                Background="{StaticResource night_bg}"
                Foreground="{StaticResource night_fg}" 
                Margin="0,10,10,0" 
                HorizontalAlignment="Right" 
                VerticalAlignment="Top"/>

        <Button Content="Day mode" MaxHeight="40" MaxWidth="80" 
                Background="{StaticResource day_bg}"
                Foreground="{StaticResource day_fg}" 
                Margin="0,35,15,0" 
                HorizontalAlignment="Right" 
                VerticalAlignment="Top"/>
    </Grid>
</Window>
